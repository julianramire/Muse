<header>
  <h1>
    Welcome, {{name}}!
  </h1>
</header>
<div class="row mt-4">


  {{#if ais.length}}
  <div class="col-md-6 project-list">
    <h1>Current Projects:</h1>

    {{#each ais as |AI| }}
    <div class="card text-center">
      <div class="card-header">
        <a class="profile-text-title" href="/ai/{{AI.id}}">{{AI.title}}</a>
      </div>
      <div class="card-body" id="projectCardBody">
        <h5 class="card-title">{{summary AI.content}}</h5>
        <button class="btn btn-sm btn-danger" data-id="{{AI.id}}">DELETE</button>
      </div>
      <div class="card-footer text-muted">
        Created on {{format_date AI.date_created}}
      </div>
    </div>
    {{/each}}

